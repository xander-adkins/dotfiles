# ghostty.yaml

## General Settings

# Window
fullscreen = true
window-padding-x = 8
window-padding-y = 8
window-padding-balance = true

quit-after-last-window-closed = true

# Optional cursor settings
cursor-style = block
cursor-style-blink = true

# Font
font-size = 18
font-thicken = true
font-synthetic-style = bold,italic,bold-italic
bold-is-bright = true

font-family = "Iosevka Term"
font-family-bold = "Iosevka Term"
font-family-italic = "Iosevka Term Italic"
font-family-bold-italic = "Iosevka Term Italic"

# Keybindings
keybind = ctrl+w=toggle_split_zoom
keybind = ctrl+h=goto_split:left
keybind = ctrl+l=goto_split:right
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up


